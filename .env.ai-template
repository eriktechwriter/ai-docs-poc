# AI-Enhanced Authoring Environment Configuration
# Copy this file to .env and fill in your actual API keys

# Company AI API Configuration
# Obtain these from your company's AI platform
COMPANY_AI_API_KEY=your_company_ai_api_key_here
COMPANY_AI_API_BASE=https://your-company-ai-api.com/v1

# OpenAI Configuration (fallback/alternative)
# Get from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Chroma Vector Database Configuration
CHROMA_HOST=localhost
CHROMA_PORT=8000
CHROMA_PERSIST_DIRECTORY=./data/chroma

# AI Feature Toggles
ENABLE_AI_SUGGESTIONS=true
ENABLE_SEMANTIC_SEARCH=true
ENABLE_AUTO_METADATA=true
ENABLE_CONTENT_VALIDATION=true

# Performance Settings
AI_REQUEST_TIMEOUT=30000
VECTOR_SEARCH_LIMIT=10
CONTENT_CHUNK_SIZE=1000

# Development Settings
DEBUG_AI_REQUESTS=false
LOG_AI_INTERACTIONS=false