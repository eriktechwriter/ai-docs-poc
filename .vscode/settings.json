{
  // Editor settings optimized for technical writing
  "editor.wordWrap": "on",
  "editor.wordWrapColumn": 80,
  "editor.rulers": [80, 120],
  "editor.lineNumbers": "on",
  "editor.minimap.enabled": false,
  "editor.fontSize": 14,
  "editor.lineHeight": 1.6,
  "editor.fontFamily": "'Cascadia Code', 'Fira Code', 'JetBrains Mono', Consolas, 'Courier New', monospace",
  "editor.fontLigatures": true,
  
  // Auto-save and formatting
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 2000,
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.fixAll.markdownlint": "explicit"
  },
  
  // MDX and Markdown specific settings
  "[mdx]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.wordWrap": "on",
    "editor.quickSuggestions": {
      "comments": "on",
      "strings": "on",
      "other": "on"
    }
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.wordWrap": "on",
    "editor.quickSuggestions": {
      "comments": "on",
      "strings": "on", 
      "other": "on"
    }
  },
  
  // Spell checker configuration
  "cSpell.words": [
    "Docusaurus",
    "MDX",
    "frontmatter",
    "Mermaid",
    "YAML",
    "Copilot",
    "Kiro",
    "Trend",
    "Micro",
    "Vision",
    "XDR",
    "SIEM",
    "SOAR",
    "API",
    "SDK",
    "CLI",
    "CI/CD",
    "DevOps",
    "GitOps",
    "Kubernetes",
    "Docker",
    "TypeScript",
    "JavaScript",
    "React",
    "JSX",
    "TSX"
  ],
  "cSpell.enableFiletypes": [
    "mdx",
    "markdown"
  ],
  
  // File associations
  "files.associations": {
    "*.mdx": "mdx",
    "*.md": "markdown"
  },
  
  // Git settings
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "git.autofetch": true,
  
  // Search settings
  "search.exclude": {
    "**/node_modules": true,
    "**/build": true,
    "**/.docusaurus": true,
    "**/dist": true
  },
  
  // File explorer settings
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  
  // Terminal settings
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.fontFamily": "'Cascadia Code', 'Fira Code', monospace",
  
  // Prettier configuration
  "prettier.singleQuote": true,
  "prettier.trailingComma": "es5",
  "prettier.tabWidth": 2,
  "prettier.semi": true,
  "prettier.printWidth": 80,
  "prettier.proseWrap": "always",
  
  // ESLint configuration
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "mdx"
  ],
  
  // Markdownlint configuration
  "markdownlint.config": {
    "MD013": false,
    "MD033": false,
    "MD041": false
  },
  
  // Live Server settings
  "liveServer.settings.donotShowInfoMsg": true,
  "liveServer.settings.donotVerifyTags": true,
  
  // Copilot settings
  "github.copilot.enable": {
    "*": true,
    "yaml": true,
    "plaintext": false,
    "markdown": true,
    "mdx": true
  },
  
  // Continue AI settings
  "continue.telemetryEnabled": false,
  
  // Theme settings
  "workbench.colorTheme": "GitHub Light Default",
  "workbench.iconTheme": "material-icon-theme",
  
  // Zen mode for focused writing
  "zenMode.hideLineNumbers": false,
  "zenMode.hideTabs": false,
  "zenMode.centerLayout": false,
  
  // Breadcrumbs
  "breadcrumbs.enabled": true,
  "breadcrumbs.showFiles": true,
  
  // Problems panel
  "problems.decorations.enabled": true,
  
  // Emmet for MDX
  "emmet.includeLanguages": {
    "mdx": "html"
  }
}